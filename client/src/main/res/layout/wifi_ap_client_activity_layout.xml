<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <Button
        android:id="@+id/open_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/open_wifi" />

    <Button
        android:id="@+id/send_http_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/open_wifi"
        android:layout_marginTop="10dp"
        android:text="@string/send_http_request" />

    <Button
        android:id="@+id/close_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="@string/close_wifi" />

    <ListView
        android:id="@+id/ap_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/close_wifi"
        android:layout_below="@id/send_http_request"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:listSelector="@drawable/wifi_ap_list_selector" />

</RelativeLayout>